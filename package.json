{
  "name": "@activescott/eslint-config",
  "version": "0.0.0",
  "description": "An ESLint sharable config for TypeScript.",
  "author": "Scott Willeke <scott@willeke.com>",
  "license": "MIT",
  "engines": {
    "node": "^10 || >=12",
    "yarn": "^1.17.3"
  },
  "main": "dist/cjs/index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*",
    ".eslintrc.yaml"
  ],
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=2.3.1",
    "@typescript-eslint/parser": ">=2.3.1",
    "eslint": ">=6.4",
    "eslint-config-prettier": ">=6.3.0"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.7.0",
    "eslint-config-prettier": "^6.7.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "semantic-release": ">=16.0.0-beta",
    "ts-jest": "^25.1.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "js-yaml": "^3.13.1"
  },
  "scripts": {
    "build:cjs": "rm -rfd ./dist/cjs; ./node_modules/.bin/tsc --project tsconfig.cjs.json",
    "build": "rm -rfd ./dist && yarn run build:cjs",
    "lint": "./node_modules/.bin/prettier -l \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && yarn run eslint",
    "eslint": "./node_modules/.bin/eslint . --ext .ts",
    "lint-fix": "./node_modules/.bin/prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && yarn run eslint --fix",
    "test": "./node_modules/.bin/jest --all --ci",
    "dev": "./node_modules/.bin/jest --watch",
    "pretest": "yarn run lint",
    "prepublishOnly": "yarn run lint && yarn run build"
  }
}
